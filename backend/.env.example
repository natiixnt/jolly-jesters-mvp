# FastAPI / Celery / DB
DB_URL=postgresql+psycopg2://mvp:mvp@postgres:5432/mvpdb
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# UI auth
UI_PASSWORD=1234
UI_BASIC_AUTH_USER=admin
UI_BASIC_AUTH_PASSWORD=1234
UI_SESSION_TTL_HOURS=24

# Shared data root (mounted as volume in docker-compose)
WORKSPACE=/workspace
SCRAPER_PROXIES_FILE=/workspace/data/proxies.txt

# Allegro scraper (Node service)
ALLEGRO_SCRAPER_URL=http://allegro_scraper:3000
ALLEGRO_SCRAPER_POLL_INTERVAL=1.0
ALLEGRO_SCRAPER_TIMEOUT_SECONDS=90

# Profitability heuristics (backend-only, no extra scraping)
PROFITABILITY_MIN_PROFIT_PLN=15
PROFITABILITY_MIN_SALES=3
PROFITABILITY_MAX_COMPETITION=50

# Scraper workers (passed to allegro_scraper service)
SCRAPER_WORKER_COUNT=3
SCRAPER_CONCURRENCY_PER_WORKER=3
SCRAPER_MAX_TASK_RETRIES=3

# Captcha solver (required)
ANYSOLVER_API_KEY=replace-with-your-key

# Optional inline proxies fallback (prefer uploading a file via UI)
# PROXIES=http://user:pass@host:port,https://user:pass@host2:port
